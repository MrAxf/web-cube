---
import WebCube from "@/components/web-cube.astro";
import BaseLayout from "@/layouts/base-layout.astro";
import Footer from "@/components/footer.astro";
---

<BaseLayout mainClass="container mx-auto" showHeader={false}>
  <section class="flex flex-wrap items-center gap-16">
    <article class="flex justify-center grow shrink-0 min-w-40">
      <WebCube size={3} id="404" />
    </article>
    <article class="flex flex-col gap-4 text-content">
      <h1>404</h1>
      <p>
        The page you are looking does not exist but you can still using the cube to have fun.
      </p>
      <div class="not-prose">
        <a href="/" class="bg-cube-left mt-4 rounded px-8 py-4 font-bold text-white shadow-md transition-colors hover:bg-blue-700">
          Back to Home
        </a>
      </div>
    </article>
  </section>
  <Footer b/>
</BaseLayout>

<script>
  import { WebCube, Face, createBaseState } from "@web-cube/web-cube";
  const $cube = document.getElementById("404") as WebCube;
  const state = createBaseState(3);
  state[Face.Up] = [
    [Face.Down, Face.Down, Face.Up],
    [Face.Up, Face.Down, Face.Up],
    [Face.Down, Face.Down, Face.Down],
  ];
  state[Face.Left] = [
    [Face.Right, Face.Right, Face.Right],
    [Face.Right, Face.Left, Face.Right],
    [Face.Right, Face.Right, Face.Right],
  ];
  state[Face.Up] = [
    [Face.Down, Face.Down, Face.Up],
    [Face.Up, Face.Down, Face.Up],
    [Face.Down, Face.Down, Face.Down],
  ];

  $cube.setState({
    [Face.Up]: [
      [Face.Up, Face.Up, Face.Front],
      [Face.Front, Face.Up, Face.Front],
      [Face.Up, Face.Up, Face.Up],
    ],
    [Face.Left]: [
      [Face.Left, Face.Left, Face.Left],
      [Face.Left, Face.Front, Face.Left],
      [Face.Left, Face.Left, Face.Left],
    ],
    [Face.Front]: [
      [Face.Back, Face.Back, Face.Front],
      [Face.Front, Face.Back, Face.Front],
      [Face.Back, Face.Back, Face.Back],
    ],
    [Face.Back]: [
      [Face.Back, Face.Back, Face.Front],
      [Face.Front, Face.Back, Face.Front],
      [Face.Back, Face.Back, Face.Back],
    ],
    [Face.Right]: [
      [Face.Right, Face.Right, Face.Right],
      [Face.Right, Face.Front, Face.Right],
      [Face.Right, Face.Right, Face.Right],
    ],
    [Face.Down]: [
      [Face.Down, Face.Down, Face.Front],
      [Face.Front, Face.Down, Face.Front],
      [Face.Down, Face.Down, Face.Down],
    ],
  });
</script>
