---
// eslint-disable-next-line @typescript-eslint/no-unused-vars
interface Props {
  tabKey: string;
  containerClass?: string;
  hidden?: boolean;
}

const { tabKey, containerClass = "", hidden = false } = Astro.props;
---

<div
  data-tab-content={tabKey}
  class:list={[containerClass, hidden && "hidden"]}
>
  <slot />
</div>
